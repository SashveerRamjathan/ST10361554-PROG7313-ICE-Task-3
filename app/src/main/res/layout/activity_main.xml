<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome,"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/tv_greeting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Categories"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a category to start the quiz:"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <!-- General Knowledge -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Knowledge"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:layout_gravity="center"
                    android:id="@+id/tv_score_gk"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Begin Quiz"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_gk"
                    android:backgroundTint="@color/orange_peel"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Computer Science -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Computer Science: "
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:layout_gravity="center"
                    android:id="@+id/tv_score_cs"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Begin Quiz"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_cs"
                    android:backgroundTint="@color/orange_peel"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Science and Nature -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Science and Nature"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:layout_gravity="center"
                    android:id="@+id/tv_score_sn"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Begin Quiz"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_sn"
                    android:backgroundTint="@color/orange_peel"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Movies and Pop Culture -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movies and Pop Culture"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:layout_gravity="center"
                    android:id="@+id/tv_score_mpc"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Begin Quiz"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_mpc"
                    android:backgroundTint="@color/orange_peel"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sign Out Button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:id="@+id/btn_sign_out"
            android:backgroundTint="@color/fire_engine_red"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>



    </LinearLayout>

</ScrollView>